<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controler.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/MainActivity_welcomeMessage_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textSize="25dp"
            android:textColor="@color/colorPrimary"

            android:gravity="center_vertical"
            android:text="Welcome to PENDU GAME!!"
            />

        <TextView
            android:id="@+id/MainActivity_Name_txt"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:textSize="20dp"
            android:text="Veuillez entrez votre nom s'il vous plaÃ®t"
            android:layout_margin="5dp" />

        <EditText

            android:id="@+id/MainActivity_EnterName_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            />

        <Button
            android:id="@+id/MainActivity_start_btn"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="START!" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>