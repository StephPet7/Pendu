<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controler.GameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/GameActivity_textCoups_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Il vous reste  X coups pour trouver le mot"

            android:layout_margin="20dp"/>

        <Button
            android:id="@+id/GameActivity_viewButton_btn"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:textColor="@color/colorAccent"
            android:background="@android:color/white"
            android:textSize="30sp"
            android:text="_n_n_s" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:textSize="20dp"

            android:text="Veuillez entrez votre lettre "
            />

        <EditText
            android:id="@+id/GameActivity_InputLetter_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"/>

        <Button
            android:id="@+id/GameActivity_ValidationButton_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:text="VALIDER" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>